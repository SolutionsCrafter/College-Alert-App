<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state: Use a bright color for selected item -->
    <item android:color="@color/primary_accent" android:state_checked="true"/>  <!-- Selected icon and text color -->

    <!-- Default (unselected) state: Use a muted color for unselected item -->
    <item android:color="@color/secondary_text"/>  <!-- Inactive icon and text color -->
</selector>
